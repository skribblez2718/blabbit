
<% layout('layouts/boilerplate') %>
<h1>All blabbits</h1>
<% for(let blabbit of blabbits) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="d-flex">
                <div class="col-md-4">
                    <img class="img-fluid p-3 card-img" alt="" src="<%=blabbit.image.url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><b><%= blabbit.author.username %></b></h5>
                        <p><%= blabbit.submittedAt %> </p>
                        <p class="card-text"><%= blabbit.message%></p>
                        <p class="card-text">
                            <small class="text-muted"><%= blabbit.location %> </small>
                        </p>
                        <a href="/blabbits/<%= blabbit._id %>" class="btn btn-primary">View Message Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %> 