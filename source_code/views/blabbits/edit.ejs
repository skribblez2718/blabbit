<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit blabbit</h1>
    <div class="col-6 offset-3">
        <form action="/blabbits/<%= blabbit._id %>?_method=PUT" method="POST" class="mb-3 validated-form" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label for="image" class="form-label">Add Images</label>
                <input type="file" id="image" name="images" class="form-control" multiple>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">blabbit</label>
                <textarea id="message" name="blabbit[message]" class="form-control" required><%= blabbit.message %></textarea>
                <div class="invalid-feedback">
                    blabbit is required
                </div>
            </div>
            <div class="mb-3">
                <img src="<%= blabbit.image.url %>" class="img-thumbnail" alt="">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-info text-white">Update blabbit</button>
            </div>
            <a href="/blabbits/<%= blabbit._id %>" class="btn btn-success">Return</a>
        </form>
    </div>
</div>